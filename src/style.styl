#v-yocss-player
  width 100%
  height 100%
  .v-yocss-player-box
    font-size 12PX
    .vjs-picture-in-picture-control
      display none
    .vjs-remaining-time
      display block
      span
        display none
      .vjs-remaining-time-display
        display initial
    .vjs-poster
      background-size 100% 100%
      display block !important
    .vjs-big-play-button
      width 1.63332em
      border-radius 50%
    &.vjs-big-play-centered
      .vjs-big-play-button
        margin-left -.81666em
    .vjs-progress-holder
      height .2em
      user-select none
      outline none
      box-shadow none
      &:focus
        border none
        box-shadow none
    .vjs-play-progress
      outline none
      box-shadow none
      &:focus
        border none
        box-shadow none
      &:before
        content ' '
        display block
        width 1em
        height 1em
        border-radius 50%
        overflow hidden
        background-color #fff
        position absolute
        right -0.5em
        top 50%
        margin-top -0.5em
        z-index 1
    &.vjs-has-started.vjs-paused
      .vjs-big-play-button
        display block
    &.vjs-has-started.vjs-playing
      .vjs-poster
        opacity 0
    &.vjs-has-started.vjs-ended
      .vjs-poster
        opacity 1
      .vjs-big-play-button
        .vjs-icon-placeholder::before
          content '\f116'
      .vjs-poster
        opacity 1
  &.is-music
    .v-yocss-player-box
      .vjs-fullscreen-control
        display none
    .vjs-has-started
      // .vjs-control-bar
      //   opacity 0
      &.vjs-playing
        .vjs-poster
          display block !important
          opacity 1